{
	"root": true,
	"env": { "browser": true, "es2021": true, "node": true },
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:react-hooks/recommended",
		"prettier",
	],
	"ignorePatterns": ["dist", ".eslintrc"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
		},
	},
	"plugins": ["@typescript-eslint", "prettier", "eslint-plugin-no-relative-import-paths"],
	"rules": {
		"prettier/prettier": 2,
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"imports": "never",
				"exports": "always-multiline",
				"functions": "always-multiline",
			},
		],
		"no-unused-vars": ["error", { "varsIgnorePattern": "React$" }],
		"@typescript-eslint/no-explicit-any": "off",
		"semi": ["error", "always"],
		"consistent-this": [2, "self"],
		"jsx-quotes": [0, "prefer-double"],
		"key-spacing": 2,
		"new-cap": [2, { "capIsNew": false, "newIsCap": true }],
		"no-console": 1,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-iterator": 2,
		"no-labels": 2,
		"no-lonely-if": 2,
		"no-loop-func": 2,
		"no-new-func": 2,
		"no-new-object": 2,
		"no-new-wrappers": 2,
		"no-proto": 2,
		"no-return-assign": 1,
		"no-self-compare": 2,
		"no-sequences": 1,
		"func-call-spacing": 2,
		"no-throw-literal": 2,
		"no-undef-init": 2,
		"no-use-before-define": "off",
		"@typescript-eslint/no-use-before-define": [2, "nofunc"],
		"quote-props": [2, "as-needed"],
		"eqeqeq": [2, "smart"],
		"quotes": [2, "single", "avoid-escape"],
		"yoda": 2,
		"@typescript-eslint/ban-ts-comment": 0,
		"import/default": 0,
		"import/namespace": 0,
		"import/no-named-as-default": 0,
		"no-relative-import-paths/no-relative-import-paths": ["warn", { "rootDir": "src" }],
	},
}
